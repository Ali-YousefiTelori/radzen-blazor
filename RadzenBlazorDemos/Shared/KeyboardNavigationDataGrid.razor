@using System.Linq.Dynamic.Core

<div class="rz-data-grid rz-datatable rz-datatable-scrollable" style="width: 100%;">
    <div class="rz-data-grid-data">
        <RadzenTable class="rz-grid-table">
            <RadzenTableHeader>
                <RadzenTableHeaderRow>
                    <RadzenTableHeaderCell style="padding: var(--rz-grid-cell-padding)">Press this key</RadzenTableHeaderCell>
                    <RadzenTableHeaderCell style="padding: var(--rz-grid-cell-padding)">To do this</RadzenTableHeaderCell>
                </RadzenTableHeaderRow>
            </RadzenTableHeader>
            <RadzenTableBody>
                @foreach (var item in Data)
                {
                    <RadzenTableRow>
                        <RadzenTableCell><span class="rz-cell-data">@GetString(item.Key)</span></RadzenTableCell>
                        <RadzenTableCell><span class="rz-cell-data">@item.Action</span></RadzenTableCell>
                    </RadzenTableRow>
                }
            </RadzenTableBody>
        </RadzenTable>
    </div>
</div>


@code {
    string[] keys = new string[] { "Tab", "DownArrow", "UpArrow", "LeftArrow", "RightArrow", "Enter", "Space", "Shift", "Alt", "Esc", "Escape" };

    [Parameter]
    public IEnumerable<KeyboardShortcut> Data { get; set; }

    MarkupString GetString(string value)
    {
        return (MarkupString)string.Join(" ", value.Split(" ")
            .Select(s => keys.Contains(s) ? $@"<span class=""rz-badge rz-badge-primary rz-variant-filled rz-shade-default"">{s}</span>" : s));
    }
}